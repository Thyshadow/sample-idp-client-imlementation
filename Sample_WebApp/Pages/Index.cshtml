@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">User Claims</h1>
    <ul>
        <li>Token: @Html.Raw(this.HttpContext.User.Identity.AuthenticationType)</li>
        @foreach (var claim in this.HttpContext.User.Claims)
        {
            <li>@Html.Raw($"{claim.Type} - {claim.Value}")</li>
        }
    </ul>
</div>
